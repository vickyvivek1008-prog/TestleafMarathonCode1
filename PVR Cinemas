package marathon;

import java.time.Duration;
import java.util.List;
import java.util.concurrent.TimeoutException;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.Select;
import org.openqa.selenium.support.ui.WebDriverWait;

public class TestCase1 {

	public static void main(String[] args) throws InterruptedException 
	{
		// TODO Auto-generated method stub
		ChromeDriver driver = new ChromeDriver();
		driver.get("https://www.pvrcinemas.com/");
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(20));
		
		driver.findElement(By.className("cinemas-inactive")).click();
		
		driver.findElement(By.xpath("//span[text()='Select Cinema']")).click();
		WebElement cinema= driver.findElement(By.xpath("//span[text()='INOX Brookefield Mall, Brookefield Bengaluru']"));
		driver.executeScript("arguments[0].click();", cinema);
		
		
		//driver.findElement(By.xpath("//span[text()='Select Date']")).click();
		WebElement date= driver.findElement(By.xpath("//span[contains(text(),'Tomorrow')]"));
		driver.executeScript("arguments[0].click();", date);
		
		//driver.findElement(By.xpath("//span[text()='Select Movie']")).click();
		WebElement movie= driver.findElement(By.xpath("//li[@class ='p-dropdown-item']/span[text()='ANDHRA KING THALUKA']"));
		driver.executeScript("arguments[0].click();", movie);
		
		//getting exception or error 
		Thread.sleep(2000);
		//driver.findElement(By.xpath("//span[text()='Select Timing']")).click();
		WebElement element = driver.findElement(By.xpath("//span[text()='07:00 PM']"));
		((JavascriptExecutor) driver).executeScript("arguments[0].click();", element);
		
		
		driver.findElement(By.xpath("//div[@class='quick-lefts ']//span")).click();
		
		driver.findElement(By.xpath("//button[text()='Accept']")).click();
		driver.findElement(By.id("CR.CLASSIC ROWS|H:12")).click();
		
		//driver.findElement(By.className("seat-info")).getText();
		WebElement Element= driver.findElement(By.xpath("//div[@class='seat-info']/p"));
		String seatinfo = Element.getText();
		WebElement e=driver.findElement(By.xpath("//div[@class='seat-number']/p"));
		String seatno=e.getText();
		System.out.println("Total results: " + seatinfo +" Seat No : "+seatno);
		
		WebElement Element2=driver.findElement(By.xpath("//div[@class='grand-prices']/h6"));
		String Grandprice=Element2.getText();
		System.out.println("grand total : "+ Grandprice);
		
		
		driver.findElement(By.xpath("//div[@class='register-btn']/button")).click();
		
		
		driver.findElement(By.xpath("//span[text() ='Skip & Proceed']")).click();
		
		
		driver.findElement(By.xpath("//button[text()='Continue']")).click();
		
		WebElement cross=driver.findElement(By.xpath("//div[@class='cross-icon mx-2']//i"));
		driver.executeScript("arguments[0].click();", cross);
	
		
	 	 System.out.println(driver.getTitle());
	 	 
	 	 driver.close();

	}

}
